{
  "extends": "next/core-web-vitals",
  "plugins": ["validate-filename"],
  "rules": {
    "validate-filename/naming-rules": [
      "error",
      {
        "rules": [
          {
            "case": "kebab",
            "target": "**/api/**"
          },
          {
            "case": "kebab",
            "target": "**/app/api/**",
            "patterns": "route.(tsx|ts)$"
          },

          {
            "case": "camel",
            "target": "**/hooks/**",
            "patterns": "^use"
          }
        ]
      }
    ]
  }
}
